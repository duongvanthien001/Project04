
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cart-container">
    <table class="cart-table">
        <thead>
            <tr>
                <th>PRODUCTS</th>
                <th>NAME OF PRODUCTS</th>
                <th>PRICE</th>
                <th>QUANTITY</th>
                <th>TOTAL</th>
                <th>REMOVE</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img src="image-placeholder.jpg" alt="Product Image"></td>
                <td>New Dress For Sunday<br><span class="price">$82.5</span> <span class="discount">$75.2</span></td>
                <td>£165.00</td>
                <td><input type="number" value="1" min="1"></td>
                <td>£165.00</td>
                <td><button class="remove-btn">&#128465;</button></td>
            </tr>
            <tr>
                <td><img src="image-placeholder.jpg" alt="Product Image"></td>
                <td>New Dress For Sunday<br><span class="price">$82.5</span> <span class="discount">$75.2</span></td>
                <td>£50.00</td>
                <td><input type="number" value="1" min="1"></td>
                <td>£50.00</td>
                <td><button class="remove-btn">&#128465;</button></td>
            </tr>
        </tbody>
    </table>

    <div class="cart-summary">
        <div class="customer-info">
            <h3>Customer Information</h3>
            <form>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
                <label for="phone">Phone:</label>
                <input type="tel" id="phone" name="phone" required>
                <label for="address">Address:</label>
                <textarea id="address" name="address" rows="3" required></textarea>
                <button type="submit">Submit</button>
            </form>
        </div>
        <div class="cart-total">
            <h3>CART TOTAL</h3>
            <p>Cart Total: <span>$909.00</span></p>
            <p>Tax: <span>$9.00</span></p>
            <p>Shipping: <span>$0.00</span></p>
            <h4>Order Total: <span>$918.00</span></h4>
            <button class="payment-btn">PAYMENT</button>
            <button class="continue-btn">CONTINUE SHOPPING</button>
        </div>
    </div>
</div>

